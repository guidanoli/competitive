#!/usr/bin/env bash
#
# Summary: Get current language
#
# Usage: libexec/get-lang
#
# Obtains current language, if set

# If the language file exists,
if [[ -f etc/lang ]]; then
	# Get its content and save it
	lang=$(cat etc/lang)
else
	lang=
fi

# If language is not set,
if [[ -z "$lang" ]]; then
	# then exit
	source libexec/err/no-language
fi

echo "$lang"
