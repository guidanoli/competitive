#!/usr/bin/env bash
#
# Summary: Run source code in debug mode
#
# Usage: libexec/base/debug [<flags>]

# Exit on error
set -e

# Make call to path
path=$(libexec/base/path)

# Save flags
export FLAGS=$@

# If source code exists,
if [[ -f "$path" ]] ; then
	# then make subcall
	libexec/subcall debug
else
	# Get language
	lang=$(libexec/get-lang)

	# else exit
	source libexec/err/no-program
fi
