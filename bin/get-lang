#!/usr/bin/env bash
#
# Summary: Get current language
#
# Usage: bin/get-lang
#
# Obtains current language, if set

# If the language file exists,
if [[ -f bin/lang.dat ]]; then
	# Get its content and save it
	lang=$(cat bin/lang.dat)
else
	lang=""
fi

# If language is not set,
if [[ -z "$lang" ]]; then
	# then exit
	source bin/err/2
fi

echo "$lang"
