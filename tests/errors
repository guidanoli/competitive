#!/usr/bin/env bash

source tests/framework

T 'cptk --version'
T 'cptk --help'

T 'rm -f etc/lang'

F 'cptk debug'
F 'cptk path'
F 'cptk run'
F 'cptk clear'

T 'cptk init c'
T 'cptk clear'
T '[ ! -f `cptk path` ]'
T 'touch `cptk path`'
T '[ -f `cptk path` ]'
T 'cptk clear'
T '[ ! -f `cptk path` ]'

T 'touch `cptk path`'

T 'cptk clear'
F 'cptk debug'
F 'cptk run'

F 'cptk ""'
F 'cptk .'
F 'cptk ..'
F 'cptk base'

F 'cptk init'
F 'cptk init ""'
F 'cptk init .'
F 'cptk init ..'
F 'cptk init lib'
