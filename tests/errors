#!/usr/bin/env bash

source tests/framework

T 'cptk --version'
T 'cptk --help'

T 'rm -f etc/lang'

F 'cptk path'
F 'cptk run'
F 'cptk debug'
F 'cptk clear'
F 'cptk edit'
F 'cptk copy'
F 'cptk paste'

T 'cptk init c'
T 'touch `cptk path`'
T '[ -f `cptk path` ]'
T 'cptk clear'
F '[ -f `cptk path` ]'
F 'cptk run'
F 'cptk debug'
F 'cptk copy'

F 'cptk ""'
F 'cptk .'
F 'cptk ..'
F 'cptk base'

F 'cptk init'
F 'cptk init ""'
F 'cptk init .'
F 'cptk init ..'
F 'cptk init lib'
