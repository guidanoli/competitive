#!/usr/bin/env bash

assert_true() {
	if eval "$1" > /dev/null 2>&1; then
		echo "[ PASS ] $1"
	else
		echo "[ FAIL ] $1"
		exit 1
	fi 
}

assert_false() {
	if ! eval "$1" > /dev/null 2>&1; then
		echo "[ PASS ] $1"
	else
		echo "[ FAIL ] $1"
		exit 1
	fi 
}

assert_true 'cptk --version'
assert_true 'cptk --help'

rm -f etc/lang
echo "(No language set)"

assert_false 'cptk debug'
assert_false 'cptk path'
assert_false 'cptk run'

assert_true 'cptk init c'
touch `cptk path`

echo "(With language set)"

rm `cptk path`
assert_false 'cptk debug'
assert_false 'cptk run'

assert_false 'cptk ""'
assert_false 'cptk .'
assert_false 'cptk ..'
assert_false 'cptk base'

assert_false 'cptk init'
assert_false 'cptk init ""'
assert_false 'cptk init .'
assert_false 'cptk init ..'
assert_false 'cptk init lib'
